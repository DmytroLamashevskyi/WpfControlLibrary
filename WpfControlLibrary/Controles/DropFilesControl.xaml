<UserControl x:Class="WpfControlLibrary.Controles.DropFilesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfControlLibrary.Controles" 
             MinHeight="100" MinWidth="150">
    <Grid>
        <Rectangle   Style="{StaticResource DropDownRectangle}"  />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Drop="StackPanel_Drop" AllowDrop="True">
            <Image Source="/WpfControlLibrary;component/img/Icons/light/appbar.cloud.upload.png" Stretch="Fill" StretchDirection="DownOnly"/>
            <TextBlock Style="{StaticResource TextBlock}" Margin="0,-3" TextAlignment="Center"  Text="Drop file" Height="22"/>
        </StackPanel>
    </Grid>
</UserControl>
